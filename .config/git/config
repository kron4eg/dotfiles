[color]
	diff = auto
	status = auto
	branch = auto

[merge]
	tool = vimdiff
	conflictstyle = diff3

[commit]
	verbose = true

[alias]
	ci = commit
	fci = commit --amend -m
	st = status -sb
	co = checkout
	coma = checkout main
	ruo = remote update origin -p
	rhom = reset --hard origin/main
	diff = diff --word-diff
	br = branch
	sb = show-branch
	mt = mergetool
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	gg = grep --break --heading -n

[branch]
	autosetupmerge = true

[push]
	default = nothing
	autosetupremote = true
	; followTags = true

[diff]
	algorithm = histogram
	tool = vimdiff
	compactionHeuristic = true
	noprefix = true

[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes

[difftool]
	prompt = false

[mergetool]
	prompt = false

[rebase]
	autoStash = true

[pull]
	ff = only

[checkout]
	defaultRemote = origin

[init]
	defaultBranch = main

[rerere]
	enabled = true
