[color]
	diff = auto
	status = auto
	branch = auto
[merge]
	tool = vimdiff
	conflictstyle = diff3
[alias]
	ci = commit
	fci = commit --amend -m
	st = status -sb
	co = checkout
	diff = diff --word-diff
	br = branch
	sb = show-branch
	mt = mergetool
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	gg = grep --break --heading -n
[branch]
	autosetupmerge = true
[push]
	default = nothing
[diff]
	algorithm = patience
	tool = vimdiff
	compactionHeuristic = true
	noprefix = true
[core]
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
[difftool]
	prompt = false
[mergetool]
	prompt = false
[http "https://gopkg.in"]
	followRedirects = true
[tig]
    line-graphics = utf-8
[commit]
	gpgsign = true
; [url "ssh://git@github.com/kubermatic/"]
; insteadOf = https://github.com/kubermatic/
[rebase]
	autoStash = true
